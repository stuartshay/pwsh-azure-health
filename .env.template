# Azure Health Monitoring - Environment Variables Template
# Copy this file to .env and fill in your values
# Do NOT commit the .env file with actual values

# ==============================================
# Azure Configuration
# ==============================================

# Azure Subscription ID to monitor for Service Health events
# Required for both local development and production
AZURE_SUBSCRIPTION_ID=

# Azure Tenant ID (required for GitHub Actions CI/CD)
AZURE_TENANT_ID=

# Azure Client ID for service principal authentication (required for GitHub Actions CI/CD)
AZURE_CLIENT_ID=

# ==============================================
# Azure Resources (for deployment)
# ==============================================

# Resource Group name for Azure resources
AZURE_RESOURCE_GROUP=rg-azure-health

# Azure region/location for deployment
AZURE_LOCATION=eastus

# Function App name (must be globally unique)
FUNCTION_APP_NAME=func-azure-health

# Storage Account name (must be globally unique, lowercase, no hyphens)
STORAGE_ACCOUNT_NAME=

# Application Insights name
APP_INSIGHTS_NAME=ai-azure-health

# ==============================================
# Function App Settings
# ==============================================

# Timer trigger CRON schedule (default: every 15 minutes)
# Format: "second minute hour day month dayOfWeek"
TIMER_CRON=0 */15 * * * *

# Blob container name for caching Service Health payloads
CACHE_CONTAINER=servicehealth-cache

# Application Insights connection string
# Retrieved automatically during deployment, or from Azure Portal
APPLICATIONINSIGHTS_CONNECTION_STRING=

