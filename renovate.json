{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Group all GitHub Actions updates together and auto-merge minor/patch updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group Azure Bicep API version updates",
      "matchManagers": ["bicep"],
      "groupName": "Azure API versions"
    }
  ]
}
