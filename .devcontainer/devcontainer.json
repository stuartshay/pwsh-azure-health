{
  "name": "Azure Health Monitoring Functions (PowerShell)",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "latest"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "uid": "1000",
      "gid": "1000"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "nodeGypDependencies": true,
      "installYarnUsingApt": false
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "installBicep": false
    },
    "ghcr.io/rchaganti/vsc-devcontainer-features/azurebicep:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0",
      "installUsingApt": true
    },
    "ghcr.io/prulloac/devcontainer-features/pre-commit:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest",
      "installDirectlyFromGitHubRelease": true
    },
    "ghcr.io/azure/azure-dev/azd:0": {
      "version": "latest"
    },
    "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1": {
      "version": "4"
    },

    "ghcr.io/jpawlowski/devcontainer-features/powershell-extended:2": {
      "version": "latest"
    },

    "ghcr.io/devcontainers-extra/features/actionlint:1": {
      "version": "latest"
    },
    "ghcr.io/lukewiwa/features/shellcheck:0": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "pspester.pester-test",
        "ms-azuretools.vscode-azurefunctions",
        "ms-vscode.powershell",
        "editorconfig.editorconfig",
        "ms-azuretools.vscode-bicep",
        "azurite.azurite",
        "ms-azuretools.vscode-azurestorage",
        "github.copilot",
        "saoudrizwan.claude-dev",
        "openai.chatgpt"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "powershell.powerShellDefaultVersion": "PowerShell 7.5 or higher",
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "azurite.location": "${workspaceFolder}/.azurite",
        "azurite.silent": true,
        "azurite.debug": false
      }
    }
  },
  "forwardPorts": [7071, 10000, 10001, 10002],
  "remoteEnv": {
    "PATH": "/usr/local/share/nvm/current/bin:/usr/local/bin:${containerEnv:PATH}",
    "WORKSPACE_DIR": "${containerWorkspaceFolder}"
  },
  "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/post-create.sh",
  "remoteUser": "vscode"
}
